<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetailActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/contact_detail_tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/contact_detail_tvNganh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_detail_tvMSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/contact_detail_tvSTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tín chỉ"/>


    </LinearLayout>
    <TextView
        android:id="@+id/contact_detail_tvTMH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên môn học"/>
    <TextView
        android:id="@+id/contact_detail_tvMMH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã môn học"/>
    <TextView
        android:id="@+id/contact_detail_tvGV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giảng viên"/>



</LinearLayout>